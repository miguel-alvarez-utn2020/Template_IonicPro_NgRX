/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2022",
    "module": "es2020",
    "lib": ["es2018", "dom"],
    "useDefineForClassFields": false,
    "paths": {
      //shared
      "@shared/components": ["src/app/shared/components/index.ts"],
      "@shared/directives": ["src/app/shared/directives/index.ts"],
      "@shared/pipes": ["src/app/shared/pipes/index.ts"],
      //features
      "@features/auth": ["src/app/features/auth/index.ts"],
      "@features/main": ["src/app/features/main/index.ts"],
      //domain
      "@domain/models": ["src/app/domain/models/index.ts"],
      "@domain/repositories": ["src/app/domain/repositories/index.ts"],
      "@domain/implementation": ["src/app/domain/implementation/index.ts"],
      //core
      "@core/services": ["src/app/core/services/index.ts"],
      "@core/guards": ["src/app/core/guards/index.ts"],
      "@core/interceptors": ["src/app/core/interceptors/index.ts"],
      "@core/custom-validator": ["src/app/shared/custom-validator/index.ts"],

      //store
      "@store/models": ["src/app/store/models/index.ts"],
      "@store/user": ["src/app/store/user/index.ts"],
      "@store/appState": ["src/app/store/app.state.ts"],

    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
